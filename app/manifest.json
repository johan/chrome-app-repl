{
  "name": "App APIs REPL",
  "version": "1.0",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "alarms",
    "audioCapture",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "experimental",
    {"fileSystem": ["write"]},
    "geolocation",
    "idle",
    {"mediaGalleries": ["read", "allAutoDetected"]},
    "notifications",
    "pushMessaging",
    "serial",
    {"socket": ["tcp-connect", "tcp-listen", "udp-send-to", "udp-bind"]},
    "storage",
    "tts",
    "unlimitedStorage",
    "videoCapture",
    "webview"
  ]
}
